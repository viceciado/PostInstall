    "Tweaks": [
        {
            "Name": "Apagar histórico e arquivos temporários",
            "Description": "Apaga o histórico do Edge, de arquivos e pastas abertas pelo usuário atual, além de arquivos temporários",
            "Category": [
                "Recomendados",
                "Finalização"
            ],
            "Win11Only": false,
            "IsBoolean": false,
            "IsRecommended": true,
            "InvokeScript": [
                "if (Get-Process msedge) { Get-Process msedge | Stop-Process -Force -ErrorAction SilentlyContinue }",
                "Remove-Item -Path \"$env:LOCALAPPDATA\\Microsoft\\Edge\\User Data\\Default\" -Recurse -Force",
                "Get-ChildItem -Path \"$env:APPDATA\\Microsoft\\Windows\\Recent\" *.* | Remove-Item -Confirm:$false -Force -Recurse",
                "Remove-Item \"HKCU:\\Software\\Microsoft\\Windows\\CurrentVersion\\Explorer\\TypedPaths\" -Confirm:$false -Recurse",
                "Remove-Item \"HKCU:\\Software\\Microsoft\\Windows\\CurrentVersion\\Explorer\\RecentDocs\" -Confirm:$false -Recurse",
                "Remove-Item \"HKCU:\\Software\\Microsoft\\Windows\\CurrentVersion\\Explorer\\RunMRU\" -Confirm:$false -Recurse",
                "If (Test-Path \"$env:SystemDrive\\Windows.old\") { Remove-Item \"$env:SystemDrive\\Windows.old\" -Confirm:$false -Recurse }",
                "Get-ChildItem -Path \"$env:windir\\Temp\" *.* | Remove-Item -Confirm:$false -Force -Recurse",
                "Get-ChildItem -Path \"$env:windir\\Prefetch\" *.* | Remove-Item -Confirm:$false -Force -Recurse",
                "Get-ChildItem -Path \"$env:TMP\" *.* | Remove-Item -Confirm:$false -Force -Recurse",
                "Start-Process -FilePath cleanmgr -ArgumentList '/sagerun'"
            ]
        },
        {
            "Name": "Apagar arquivos da instalação",
            "Description": "Apaga os scripts e arquivos de instalação auxiliares criados pelo arquivo de resposta (unattend.xml)",
            "Category": [
                "Finalização"
            ],
            "Win11Only": false,
            "IsBoolean": false,
            "IsRecommended": true,
            "InvokeScript": [
                "Get-ChildItem -Path \"$env:windir\\Setup\\Scripts\" | Where-Object { $_.Name -notlike \"Install*\" } | Remove-Item -Confirm:$false -Force -Recurse"
            ]
        },
        {
            "Name": "Limpar pasta Downloads",
            "Description": "Apaga o conteúdo da pasta Downloads do usuário atual",
            "Category": [
                "Recomendados",
                "Finalização"
            ],
            "Win11Only": false,
            "IsBoolean": false,
            "IsRecommended": true,
            "InvokeScript": [
                "Get-ChildItem -Path \"$env:USERPROFILE\\Downloads\" *.* | Remove-Item -Confirm:$false -Force -Recurse"
            ]
        },
        {
            "Name": "Apagar atalhos na área de trabalho",
            "Description": "Apaga os atalhos na área de trabalho do usuário atual",
            "Category": [
                "Recomendados",
                "Finalização"
            ],
            "Win11Only": false,
            "IsBoolean": false,
            "IsRecommended": false,
            "InvokeScript": [
                "Get-ChildItem -Path \"$env:PUBLIC\\Desktop\" *.lnk | Remove-Item -Confirm:$false -Force -Recurse",
                "Get-ChildItem -Path ([Environment]::GetFolderPath(\"Desktop\")) *.lnk | Remove-Item -Confirm:$false -Force -Recurse"
            ]
        },
