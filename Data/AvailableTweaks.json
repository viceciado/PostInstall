            "Category": "Finalização",
            "Win11Only": false,
            "IsBoolean": false,
            "IsRecommended": true,
            "Command": [
                "Get-ChildItem -Path \"$env:windir\\Temp\" *.* | Remove-Item -Confirm:$false -Force -Recurse",
                "Get-ChildItem -Path \"$env:TMP\" *.* | Remove-Item -Confirm:$false -Force -Recurse"
            ]
        },
