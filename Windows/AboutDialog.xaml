<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="" Width="500" Height="Auto" SizeToContent="Height"
        WindowStyle="None" WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False" ResizeMode="NoResize" Topmost="False"
        AllowsTransparency="True" Background="Transparent" Foreground="White" FontFamily="Futura">
    <Window.Resources>
        <Style x:Key="DialogButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Futura"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="BorderBrush" Value="#3F3F46"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Estilo para o botão de fechar -->
        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" TextElement.Foreground="{TemplateBinding Foreground}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4A4A4F"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#6A6A6F"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Futura"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>
    <Border x:Name="DialogBorder" 
            Background="#1E1E1E" 
            BorderBrush="#3F3F46" 
            BorderThickness="1" 
            CornerRadius="5"
            Effect="{x:Null}">
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            
            <!-- Barra de título -->
            <Border Grid.Row="0" CornerRadius="5,5,0,0">
                <Grid>
                    <TextBlock x:Name="TitleText" 
                               Text="" 
                               Foreground="White" 
                               FontSize="14" 
                               FontWeight="SemiBold"
                               VerticalAlignment="Center" 
                               HorizontalAlignment="Left" 
                               Margin="15,0"/>
                    
                    <Button x:Name="CloseButton" 
                            Content="✕" 
                            Style="{StaticResource CloseButtonStyle}"
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Center" 
                            Margin="0,0,5,0"/>
                </Grid>
            </Border>
            
            <!-- Conteúdo principal -->
            <Grid Grid.Row="1" Margin="15">
                <ScrollViewer VerticalScrollBarVisibility="Auto" 
                              HorizontalScrollBarVisibility="Disabled"
                              VerticalAlignment="Stretch">
                    <StackPanel x:Name="SystemInfoPanel" Orientation="Vertical">
                        <TextBlock x:Name="FallbackText" Text="Informações do sistema indisponíveis" Foreground="LightGray" FontSize="12" Visibility="Collapsed" Margin="0,0,0,10"/>

                        <Border Width="30" Height="30" Background="#383838" CornerRadius="15" Margin="0,0,0,10" HorizontalAlignment="Center">
                            <TextBlock Text="&#xE783;" FontFamily="Segoe MDL2 Assets" Foreground="White" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <TextBlock Text="Informações do sistema" 
                                FontSize="14" 
                                FontWeight="SemiBold"
                                HorizontalAlignment="Center"/>

                        <!-- Seção: Máquina -->
                        <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                            <TextBlock Text="Máquina" FontSize="14" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,5"/>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Chassis SKU" Grid.Row="0" Grid.Column="0" Foreground="LightGray"/>
                                <TextBlock x:Name="MachineSKUText" Grid.Row="0" Grid.Column="1" Foreground="LightGray"/>
                                <TextBlock Text="Fabricante" Grid.Row="1" Grid.Column="0" Foreground="LightGray"/>
                                <TextBlock x:Name="ManufacturerText" Grid.Row="1" Grid.Column="1" Foreground="LightGray"/>
                                <TextBlock Text="Modelo" Grid.Row="2" Grid.Column="0" Foreground="LightGray"/>
                                <TextBlock x:Name="ModelText" Grid.Row="2" Grid.Column="1" Foreground="LightGray"/>
                            </Grid>
                        </StackPanel>

                        <!-- Seção: Identificação -->
                        <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                            <TextBlock Text="Identificação" FontSize="14" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,5"/>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Número de série" Grid.Row="0" Grid.Column="0" Foreground="LightGray"/>
                                <TextBlock x:Name="SerialText" Grid.Row="0" Grid.Column="1" Foreground="LightGray"/>
                                <Button x:Name="CopySerialButton" Grid.Row="0" Grid.Column="2" Width="25" Height="25" Background="#383838" BorderBrush="#444444" BorderThickness="1" ToolTip="Copiar número de série" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0" Visibility="Collapsed">
                                    <TextBlock Text="&#xE8C8;" FontFamily="Segoe MDL2 Assets" Foreground="White" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Button>
                                <TextBlock Text="Processador" Grid.Row="1" Grid.Column="0" Foreground="LightGray"/>
                                <TextBlock x:Name="ProcessorText" Grid.Row="1" Grid.Column="1" Foreground="LightGray"/>
                            </Grid>
                        </StackPanel>

                        <!-- Seção: Sistema Operacional -->
                        <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                            <TextBlock Text="Sistema operacional" FontSize="14" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,5"/>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Edição" Grid.Row="0" Grid.Column="0" Foreground="LightGray"/>
                                <TextBlock x:Name="OSCaptionText" Grid.Row="0" Grid.Column="1" Foreground="LightGray"/>
                                <TextBlock Text="Arquitetura" Grid.Row="1" Grid.Column="0" Foreground="LightGray"/>
                                <TextBlock x:Name="OSArchText" Grid.Row="1" Grid.Column="1" Foreground="LightGray"/>
                                <TextBlock Text="Build" Grid.Row="2" Grid.Column="0" Foreground="LightGray"/>
                                <TextBlock x:Name="OSBuildText" Grid.Row="2" Grid.Column="1" Foreground="LightGray"/>
                                <TextBlock Text="Memória RAM" Grid.Row="3" Grid.Column="0" Foreground="LightGray"/>
                                <TextBlock x:Name="MemoryText" Grid.Row="3" Grid.Column="1" Foreground="LightGray"/>
                                <TextBlock Text="Tipo de Boot" Grid.Row="4" Grid.Column="0" Foreground="LightGray"/>
                                <TextBlock x:Name="BootTypeText" Grid.Row="4" Grid.Column="1" Foreground="LightGray"/>
                            </Grid>
                        </StackPanel>

                        <!-- Seção: Discos -->
                        <StackPanel Orientation="Vertical" Margin="0,10,0,10">
                            <TextBlock Text="Discos" FontSize="14" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,5"/>
                            <Border Background="#2E2E2E" BorderThickness="1" BorderBrush="#444444" Padding="8">
                                 <TextBlock x:Name="DisksText" Foreground="#D4D4D4" TextWrapping="Wrap"/>
                             </Border>
                        </StackPanel>

                        <!-- Seção: GPUs -->
                        <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                            <TextBlock Text="GPUs" FontSize="14" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,5"/>
                            <Border Background="#2E2E2E" BorderThickness="1" BorderBrush="#444444" Padding="8">
                                 <TextBlock x:Name="GpusText" Foreground="#D4D4D4" TextWrapping="Wrap"/>
                             </Border>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Border>
</Window>