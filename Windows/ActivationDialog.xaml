<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ativação" Width="400" Height="Auto" SizeToContent="Height"
        WindowStyle="None" WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False" ResizeMode="NoResize" Topmost="False"
        AllowsTransparency="True" Background="Transparent" Foreground="White" FontFamily="Futura">
    <Window.Resources>
        <Style x:Key="DialogButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Futura"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3E3E42"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#4A4A4F"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="RoundButtonStyle" TargetType="Button" BasedOn="{StaticResource DialogButtonStyle}">
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3E3E42"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#4A4A4F"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Futura"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderBrush" Value="#3F3F46"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CaretBrush" Value="White"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Futura"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style x:Key="OemActivateButtonStyle" TargetType="Button" BasedOn="{StaticResource DialogButtonStyle}">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="True">
                                <Setter Property="Background" Value="#4CAF50"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#66BB6A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#388E3C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Border x:Name="DialogBorder" 
            Background="#1E1E1E" 
            BorderBrush="#3F3F46" 
            BorderThickness="1" 
            CornerRadius="5"
            Effect="{x:Null}">
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Barra de título -->
            <Border Grid.Row="0" CornerRadius="5,5,0,0">
                <Grid>
                    <TextBlock x:Name="TitleText" 
                               Text="Ativação" 
                               Foreground="White" 
                               FontSize="14" 
                               FontWeight="SemiBold"
                               VerticalAlignment="Center" 
                               HorizontalAlignment="Left" 
                               Margin="15,0"/>
                    
                    <Button x:Name="CloseButton" 
                            Content="✕" 
                            Width="30" 
                            Height="30" 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Center" 
                            Margin="0,0,5,0"
                            BorderThickness="0" 
                            FontSize="16" 
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="#CCCCCC"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="15">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" TextElement.Foreground="{TemplateBinding Foreground}"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#4A4A4F"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Background" Value="#6A6A6F"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>
            
            <!-- Conteúdo principal -->
            <Grid Grid.Row="1" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Width="30" 
                            Height="30" 
                            Background="#383838" 
                            CornerRadius="15" 
                            Margin="0,0,0,10"
                            HorizontalAlignment="Center">
                        <TextBlock Text="&#xE192;"
                                   FontFamily="Segoe MDL2 Assets" 
                                   Foreground="White" 
                                   FontSize="16"
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"/>
                    </Border>
                    
                    <!-- Conteúdo do Passo 1 -->
                    <StackPanel Grid.Row="1" HorizontalAlignment="Center">
                        <TextBlock Text="Ativação OEM" 
                                FontSize="14" 
                                FontWeight="SemiBold"
                                Margin="0,0,0,5"
                                HorizontalAlignment="Center"/>
                    </StackPanel>
                <Grid Grid.Row="2" Grid.Column="0" Margin="0,5,0,10" Height="30">
                    <TextBox x:Name="OemKeyTextBox" Text="Clique no botão abaixo para buscar pela chave OEM" IsReadOnly="True" VerticalAlignment="Center" VerticalContentAlignment="Center" Height="30" Padding="5,0,40,0"/>
                    <Button x:Name="CopyOemKeyButton" Style="{StaticResource RoundButtonStyle}" Content="&#xE16D;" FontFamily="Segoe MDL2 Assets" Width="25" Height="25" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,5,0" Visibility="Collapsed" ToolTip="Copiar chave OEM"/>
                </Grid>

                <StackPanel Grid.Row="3" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center">
                      <Button x:Name="FindOemKeyButton" Style="{StaticResource DialogButtonStyle}" Content="Localizar chave OEM" Width="175" Height="35" Margin="0,0,5,0">
                          <Button.Template>
                              <ControlTemplate TargetType="Button">
                                  <Border Background="#993233"
                                          BorderBrush="#3F3F46"
                                          BorderThickness="1"
                                          CornerRadius="3">
                                      <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                  </Border>
                                  <ControlTemplate.Triggers>
                                      <Trigger Property="IsMouseOver" Value="True">
                                          <Setter Property="Background" Value="#B73E40"/>
                                      </Trigger>
                                      <Trigger Property="IsPressed" Value="True">
                                          <Setter Property="Background" Value="#7A2829"/>
                                      </Trigger>
                                  </ControlTemplate.Triggers>
                              </ControlTemplate>
                          </Button.Template>
                      </Button>
                      <Button x:Name="ActivateOemButton" Style="{StaticResource OemActivateButtonStyle}" Content="Ativar" Width="172" Height="35" Margin="5,0,0,0" Background="#2D2D30" IsEnabled="False"/>
                  </StackPanel>

                  <Rectangle Fill="#3F3F46" Height="1" HorizontalAlignment="Stretch" Margin="0,20,0,20" Grid.Row="4"/>
                  <Border Width="30" 
                            Height="30" 
                            Background="#383838" 
                            CornerRadius="15" 
                            Margin="0,0,0,10"
                            HorizontalAlignment="Center"
                            Grid.Row="5">
                        <TextBlock Text="&#xE756;"
                                   FontFamily="Segoe MDL2 Assets" 
                                   Foreground="White" 
                                   FontSize="16"
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"/>
                    </Border>
                    
                    <!-- Conteúdo do Passo 2 -->
                    <StackPanel Grid.Row="6" HorizontalAlignment="Center">
                        <TextBlock Text="Ativação complementar" 
                                FontSize="14" 
                                FontWeight="SemiBold"
                                Margin="0,0,0,5"
                                HorizontalAlignment="Center"/>
                    </StackPanel>
                  <Button x:Name="ActivateWindowsMasButton" Style="{StaticResource DialogButtonStyle}" Content="Abrir ativador MAS" Grid.Row="7" Grid.Column="0" Margin="0,5,0,15" Padding="12,8" Width="250" Height="35">
                      <Button.Template>
                          <ControlTemplate TargetType="Button">
                              <Border Background="#993233"
                                      BorderBrush="#3F3F46"
                                      BorderThickness="1"
                                      CornerRadius="3">
                                  <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                              </Border>
                              <ControlTemplate.Triggers>
                                  <Trigger Property="IsMouseOver" Value="True">
                                      <Setter Property="Background" Value="#B73E40"/>
                                  </Trigger>
                                  <Trigger Property="IsPressed" Value="True">
                                      <Setter Property="Background" Value="#7A2829"/>
                                  </Trigger>
                              </ControlTemplate.Triggers>
                          </ControlTemplate>
                      </Button.Template>
                  </Button>
            </Grid>
        </Grid>
    </Border>
</Window>