<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Finalizar instalação" Width="500" Height="Auto" SizeToContent="Height" 
        WindowStyle="None" WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False" ResizeMode="NoResize" Topmost="False"
        AllowsTransparency="True" Background="Transparent" Foreground="White" FontFamily="Futura">
    <Window.Resources>
        <Style x:Key="DialogButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Futura"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="BorderBrush" Value="#3F3F46"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="LightGray"/>
            <Setter Property="FontFamily" Value="Futura"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,3"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True"><Setter Property="Foreground" Value="White"/></Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Futura"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderBrush" Value="#3F3F46"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Futura"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,0,0,5"/> <!-- Margin inferior para TextBlocks (labels) -->
        </Style>
        <!-- Estilo para o botão de fechar -->
        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" TextElement.Foreground="{TemplateBinding Foreground}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4A4A4F"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#6A6A6F"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Border x:Name="DialogBorder" 
            Background="#1E1E1E" 
            BorderBrush="#3F3F46" 
            BorderThickness="1" 
            CornerRadius="5"
            Effect="{x:Null}">
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Barra de título -->
            <Border Grid.Row="0" CornerRadius="5,5,0,0">
                <Grid>
                    <TextBlock x:Name="TitleText" 
                               Text="Finalizar instalação" 
                               Foreground="White" 
                               FontSize="14" 
                               FontWeight="SemiBold"
                               VerticalAlignment="Center" 
                               HorizontalAlignment="Left" 
                               Margin="15,0"/>
                    
                    <Button x:Name="CloseButton" 
                            Content="✕" 
                            Style="{StaticResource CloseButtonStyle}"
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Center" 
                            Margin="0,0,5,0"/>
                </Grid>
            </Border>
            
            <!-- Conteúdo principal -->
            <StackPanel Grid.Row="1" Margin="15">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,0,0,10">
                    <Border Width="30" 
                                Height="30" 
                                Background="#383838" 
                                CornerRadius="15" 
                                Margin="0,0,0,10"
                                HorizontalAlignment="Center">
                            <TextBlock Text="&#xE13D;"
                                    FontFamily="Segoe MDL2 Assets" 
                                    Foreground="White" 
                                    FontSize="16"
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="Informações sobre o serviço" 
                                    FontSize="14"
                                    FontWeight="Bold"
                                    Margin="0,0,0,10"
                                    HorizontalAlignment="Center"/>
                    <TextBlock TextWrapping="Wrap" FontSize="11" Foreground="LightGray">
                        Estas informações são opcionais. Se fornecidas, serão usadas para registrar o proprietário no sistema (visível em 'winver') e para o log de instalação.
                    </TextBlock>
                </StackPanel>

                <!-- Linha para OS e Cliente -->
                <Grid Grid.Row="1" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/> 
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Nº OS:"/>
                        <TextBox x:Name="OsNumberTextBox" Width="70"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Cliente:"/>
                        <TextBox x:Name="ClientNameTextBox"/> <!-- Ocupará a largura da coluna "*" -->
                    </StackPanel>
                </Grid>

                <TextBlock Grid.Row="2" Text="Técnico:" Margin="0,0,0,5"/>
                <TextBox x:Name="TechnicianTextBox" Grid.Row="3"/>

                <!-- Separador 1 -->
                <Border Height="1" 
                        Background="#505050" 
                        Margin="0,0,0,10"/>

                <TextBlock Text="Parâmetros de finalização" 
                               FontSize="14" 
                               FontWeight="SemiBold"
                               Margin="0,0,0,10"
                               HorizontalAlignment="Left"/>

                <ScrollViewer x:Name="FinalizeTweaksScrollViewer"
                                      VerticalScrollBarVisibility="Auto"
                                      MaxHeight="150"
                                      Margin="0,0,0,15" 
                                      Background="#1E1E1E"
                                      BorderBrush="#505050" 
                                      BorderThickness="1">
                            <StackPanel x:Name="FinalizeTweaksStackPanel" Orientation="Vertical"/>
                        </ScrollViewer>
                <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <Button x:Name="FinalizeOkButton" Content="Finalizar" Style="{StaticResource DialogButtonStyle}" Background="#4CAF50" Width="120" Height="35"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</Window>