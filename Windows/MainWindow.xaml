<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Instalação e configuração do Windows" Width="700" Height="600"
        WindowStyle="None" WindowStartupLocation="CenterScreen"
        Background="Transparent" AllowsTransparency="True" Foreground="#ffffff"
        FontFamily="Futura"
        ResizeMode="NoResize"
        ShowInTaskbar="True"
        Topmost="False">
    <Window.Resources>
        <Color x:Key="HighlightColor">#993233</Color>
        <Color x:Key="DisabledColor">#CC6666</Color>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Futura"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                                <Setter Property="Cursor" Value="Arrow"/>
                                <Setter Property="Background" Value="#505050"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RoundButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Width" Value="35"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="18">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CloseButtonStyle" TargetType="Button" BasedOn="{StaticResource RoundButtonStyle}">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="18">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SectionTitleStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="LightGray"/>
            <Setter Property="FontFamily" Value="Futura"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Margin" Value="0,15,0,5"/>
        </Style>

        <Style x:Key="MainSubTitleStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="LightGray"/>
            <Setter Property="FontFamily" Value="Futura"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="FooterTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="LightGray"/>
            <Setter Property="FontFamily" Value="Futura"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Margin" Value="15,0,0,0"/>
        </Style>

        <Style x:Key="FooterButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Tag" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="3">
                            <TextBlock Text="{TemplateBinding Content}"
                                       Style="{StaticResource FooterTextStyle}"
                                       TextDecorations="{TemplateBinding Tag}"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Margin="3,0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Tag" Value="Underline"/>
                    <Setter Property="Cursor" Value="Hand"/>
                    <Setter Property="Background" Value="#555555"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Tag" Value="Underline"/>
                    <Setter Property="Foreground" Value="LightBlue"/>
                    <Setter Property="Background" Value="#777777"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border CornerRadius="15" Background="#202020" Opacity="0.95" x:Name="DialogBorder">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Grid.ColumnSpan="3" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,15,0,0">
                    <TextBlock Text="Instalação e configuração do Windows" FontSize="25" HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0">
                    <Button x:Name="AvoidSleepButton" ToolTip="Evitar suspensão" Style="{StaticResource RoundButtonStyle}" Foreground="Yellow" Margin="0,0,10,0">
                            <Button.Content>
                                <TextBlock Text="&#xEB50;" />
                            </Button.Content>
                    </Button>
                    <Button x:Name="CloseButton" ToolTip="Fechar" Style="{StaticResource CloseButtonStyle}">
                        <Button.Content>
                            <TextBlock Text="&#xE711;" />
                        </Button.Content>
                    </Button>
                </StackPanel>
            </Grid>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20,0,20,0">

                    <TextBlock Text="Instalação de programas" Style="{StaticResource SectionTitleStyle}" HorizontalAlignment="Center"/>
                    <Grid HorizontalAlignment="Center" Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="SelectAndInstallProgramsButton" Content="Instalar programas" ToolTip="Instalar programas usando o Winget" Style="{StaticResource PrimaryButtonStyle}" Background="#993233" Margin="0,0,10,0" Width="225" Height="35" Grid.Column="0"/>
                        <Button x:Name="InstallOfficeButton" Content="Instalar Office" ToolTip="Instalar o Office a partir de um arquivo de imagem" Style="{StaticResource PrimaryButtonStyle}" Background="#993233" Margin="10,0,0,0" Width="225" Height="35" Grid.Column="1"/>
                    </Grid>

                    <Rectangle Fill="Gray" Height="1" HorizontalAlignment="Stretch"/>

                    <TextBlock Text="Aparência e ajustes" Style="{StaticResource SectionTitleStyle}" HorizontalAlignment="Center"/>
                    <Grid HorizontalAlignment="Center" Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="ApplyThemeButton" Content="" ToolTip="" FontFamily="Segoe MDL2 Assets" FontSize="20" Style="{StaticResource PrimaryButtonStyle}" Background="#993233" Width="35" Height="35" Grid.Column="0" />
                        <Button x:Name="TweaksButton" Content="Ajustes gerais" ToolTip="Modifique configurações e aplique tweaks" Style="{StaticResource PrimaryButtonStyle}" Background="#993233" Width="192" Height="35" Grid.Column="1" Margin="10,0,10,0"/>
                        <Button x:Name="FixPermissionsButton" Content="Limpar permissões" ToolTip="Limpe as permissões antigas de outra instalação do Windows" Style="{StaticResource PrimaryButtonStyle}" Background="#993233" Width="192" Height="35" Grid.Column="2" Margin="0,0,0,0"/>
                    </Grid>

                    <Rectangle Fill="Gray" Height="1" HorizontalAlignment="Stretch"/>

                    <TextBlock Text="Ativação do sistema" Style="{StaticResource SectionTitleStyle}" HorizontalAlignment="Center"/>
                    <Button x:Name="ActivateButton" Content="Ativação" Style="{StaticResource PrimaryButtonStyle}" Background="#993233" HorizontalAlignment="Center" Margin="0,0,0,15" Width="200" Height="35"/>

                    <Rectangle Fill="Gray" Height="1" HorizontalAlignment="Stretch"/>

                    <TextBlock Text="Drivers" Style="{StaticResource SectionTitleStyle}" HorizontalAlignment="Center"/>
                    <Grid HorizontalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="WUpdateButton" ToolTip="Abrir o Windows Update" FontSize="20" Style="{StaticResource PrimaryButtonStyle}" Background="#993233" Margin="0,0,0,0" Width="35" Height="35" Grid.Column="0">
                            <Button.Content>
                                <TextBlock Text="&#xEC27;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Button.Content>
                        </Button>
                        <Button x:Name="ImportDriversButton" ToolTip="Importar arquivos de instalação de drivers" Content="Importar backup de drivers" Style="{StaticResource PrimaryButtonStyle}" Background="#993233" Margin="10,0,10,0" Width="230" Height="35" Grid.Column="1"/>
                        <Button x:Name="DeviceManagerButton" ToolTip="Abrir o Gerenciador de Dispositivos" FontSize="20" Style="{StaticResource PrimaryButtonStyle}" Background="#993233" Margin="0,0,0,0" Width="35" Height="35" Grid.Column="2">
                            <Button.Content>
                                <TextBlock Text="&#xF211;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Button.Content>
                        </Button>
                    </Grid>

                </StackPanel>
            </ScrollViewer>

            <Button x:Name="FinalizeInstallButton" Content="Finalizar instalação" Style="{StaticResource PrimaryButtonStyle}" Background="#993233" Grid.Row="2" HorizontalAlignment="Center" Margin="0,20,0,20" Width="250" Height="45"/>

            <Border Background="#333333" Grid.Row="3" Height="30" VerticalAlignment="Bottom" CornerRadius="0,0,15,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="450"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="FooterStatusButton" ToolTip="Clique para ver o log de instalação." Content="Status:" Grid.Column="0"
                            HorizontalAlignment="Left" Margin="15,4,0,4" Style="{StaticResource FooterButtonStyle}">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="3">
                                    <TextBlock Text="{TemplateBinding Content}"
                                               Style="{StaticResource FooterTextStyle}"
                                               TextDecorations="{TemplateBinding Tag}"
                                               HorizontalAlignment="Left" VerticalAlignment="Center"
                                               Margin="3,0"
                                               TextTrimming="CharacterEllipsis"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button x:Name="ScriptVersionButton" Content="" Grid.Column="1"
                                HorizontalAlignment="Right" Margin="10,4" Style="{StaticResource FooterButtonStyle}"/>

                    <Button x:Name="AboutButton" Content="Sobre o sistema" Grid.Column="2"
                                HorizontalAlignment="Right" Margin="0,4,15,4" Style="{StaticResource FooterButtonStyle}"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>